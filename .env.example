# VISOR KINO - Variables de Entorno

# === APP ===
APP_ENV=production
APP_URL=https://tudominio.com
APP_SECRET=CAMBIAR_clave_secreta_random_32_chars

# === BASE DE DATOS (Railway MySQL Plugin) ===
DB_HOST=mysql.railway.internal
DB_PORT=3306
DB_DATABASE=visor_kino
DB_USERNAME=root
DB_PASSWORD=CAMBIAR_password

# === CLOUDFLARE R2 (Storage de Media) ===
# Crear bucket en: https://dash.cloudflare.com → R2
R2_ENDPOINT=https://ACCOUNT_ID.r2.cloudflarestorage.com
R2_ACCESS_KEY=CAMBIAR
R2_SECRET_KEY=CAMBIAR
R2_BUCKET=visor-kino-media
R2_PUBLIC_URL=https://media.tudominio.com

# === ADMIN ===
ADMIN_USER=admin
ADMIN_PASSWORD=CAMBIAR_password_seguro

# === SEGURIDAD ===
RATE_LIMIT_PER_MINUTE=60
DOWNLOAD_TOKEN_TTL=900

# === GOOGLE SHEETS (Catálogo Master) ===
GOOGLE_SHEET_ID=ID_DE_TU_HOJA_DE_GOOGLE_SHEETS
